<div class="panel panel-danger">
  <div class="panel-heading">Meal Register</div>
  <div class="panel-body">
	<%= form_for(@lunchdetail)do |f| %>	
	 <div class="form-group">
     <%= f.label :Name %>
	 <% users = User.all %>
	 <%= f.collection_select( :user_id, users, :id, :name, :prompt => true, class: 'form-control',id: 'name') %>
    </div>
<p>
    <%= f.label :Date %>
  	<%= f.text_field :date %>
</p>
	
	<div class="form-group">
    <%= f.label :Had_Lunch %>
	<%= f.select :had_lunch, options_for_select({'Yes': '1', 'No':'0'}), {class: 'form-control', id: 'hadlunch'} %>
    </div>
	<div class="form-group">
    <%= f.label :Cost_of_meal %> 
	<%= f.select :daily_invoice_id, options_for_select(DailyInvoice.all.map {|p| ["#{p.date} - #{p.amount} - #{p.restaurant_name}", p.id]}),{class: 'form-control',id: 'costofmeal'}%>
     </div>
	<button type="save" class="btn btn-success btn-cons">Save</button>
    <%= link_to 'Cancel', lunch_details_path, :class => "btn btn-danger btn-cons" %>
  <% end %>
  </div>
</div>
	
