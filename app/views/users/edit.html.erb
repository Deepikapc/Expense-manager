<h1>Editing User</h1>
<%= form_for(@user)do |f|%>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </p>
  
  <p>
    <%= f.label :cost_of_meal %><br>
    <%= f.text_field :cost_of_meal %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<%end%>