<h1>User Creation</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Cost of meal</th>
	<th>created_at</th>
	<th>updated_at</th>
 </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td>
      	<%= link_to "#{user.name}", edit_user_path(user) %>
	  </td>
	  
      <td>
      	<%= user.cost_of_meal %>
		</td>
		
		<td>
      	<%= user.created_at %>
		</td>
		
		<td>
      	<%= user.updated_at %>
		</td>
		
		<td><%= link_to 'Destroy', user_path(user),method: :delete, data: { confirm: 'Are you sure?' } %></td>
		
    </tr>
  <% end %>
</table>
<p>
	<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
</p>